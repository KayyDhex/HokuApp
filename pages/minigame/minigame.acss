.page-minigame{
  display: flex;
  flex-direction: column;
  padding: 0 10% 0 10%;
  margin-top: 40px;
  width: 100vw;
  align-items: center;
}

.btn{
  width: 100px;
  height: 100px;
}

.header{
  display: grid;
  grid-template-columns: 1fr 1fr;
  margin: 25px 0px 25px 0px;
  text-align: center;
}

.table{
  margin: 20px 0px 20px 0px;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
}
.text-info{
  text-align: center;
  font-size: 20px;
}